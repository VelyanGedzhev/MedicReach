@model MedicReach.Models.Appointments.AppointmentFormModel;
@{ ViewData["Title"] = "Book Appointment"; }

@section Styles {
    <link href="~/css/date-picker.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="https://use.fontawesome.com/84fee8031d.css">
}

<div class="container-fluid">
    <h2 class="heading-margin text-center">@ViewData["Title"]</h2>
    <div class="row justify-content-center mx-0">
        <div class="col-lg-6">
            <div class="card">
                <form autocomplete="off">
                    <div class="card-header">
                        <div class="mx-0 mb-0 row justify-content-sm-center justify-content-start px-1">
                            <input type="text" id="dp1" class="datepicker" placeholder="&#xf073; Pick Date" style="font-family:Arial, FontAwesome, white" name="date" readonly />
                        </div>
                    </div>
                    <div class="card-body p-3 p-sm-5">
                        <div class="row text-center mx-0">
                            <div class="col-md-3 col-4 my-1 px-2">
                                <div class="cell py-1">09:00</div>
                            </div>
                            <div class="col-md-3 col-4 my-1 px-2">
                                <div class="cell py-1">09:30</div>
                            </div>
                            <div class="col-md-3 col-4 my-1 px-2">
                                <div class="cell py-1">10:00</div>
                            </div>
                        </div>
                        <div class="row text-center mx-0">
                            <div class="col-md-3 col-4 my-1 px-2">
                                <div class="cell py-1">10:30</div>
                            </div>
                            <div class="col-md-3 col-4 my-1 px-2">
                                <div class="cell py-1">11:00</div>
                            </div>
                            <div class="col-md-3 col-4 my-1 px-2">
                                <div class="cell py-1">11:30</div>
                            </div>
                        </div>
                        <div class="row text-center mx-0">
                            <div class="col-md-3 col-4 my-1 px-2">
                                <div class="cell py-1">14:00</div>
                            </div>
                            <div class="col-md-3 col-4 my-1 px-2">
                                <div class="cell py-1">14:30</div>
                            </div>
                            <div class="col-md-3 col-4 my-1 px-2">
                                <div class="cell py-1">15:00</div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="col-lg-6">
            @*<div>
                    @await Component.InvokeAsync("SalonServiceDetails", new { Model.SalonId, Model.ServiceId })
                </div>*@
            <form method="post" enctype="multipart/form-data">
                <input asp-for="@Model.PhysicianId" value="@Model.PhysicianId" class="form-control" hidden>
                <input asp-for="@Model.PatientId" value="@Model.PatientId" class="form-control" hidden>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Date</label>
                    <div class="col-sm-10">
                        <div id="selectedDate" asp-for="@Model.Date" class="form-control" hidden></div>
                        <input asp-for="@Model.Date" value="" class="form-control" required readonly />
                        <span @*asp-validation-for="Date"*@ class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Hour</label>
                    <div class="col-sm-10">
                        <div id="selectedTime" asp-for="@Model.Hour" class="form-control" hidden></div>
                        <input asp-for="@Model.Hour" value="" class="form-control" required readonly />
                        <span asp-validation-for="Hour" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mt-4">
                    <div class="col-sm-10">
                        <input class="btn btn-primary" type="submit" value="Book" />
                    </div>
                </div>
            </form>
            <div asp-validation-summary="All" data-valmsg-summary="true"></div>
        </div>

    </div>
</div>

<!--
<div id="selectedDate"></div>
<div id="selectedTime"></div>
-->

@section Scripts {
    <script src="~/js/bootstrap-datepicker.js" asp-append-version="true"></script>
    <script src="~/js/date-picker.js" asp-append-version="true"></script>
    <script type="text/javascript">$.validator.setDefaults({
            ignore: ""
        })</script>
}