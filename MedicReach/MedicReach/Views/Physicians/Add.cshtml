@model BecomePhysicianFormModel

@{
    ViewData["Title"] = "Add Physician";
}

<div class="container">
    <div class="row">
        <div class="offset-lg-2 col-lg-8 col-sm-12 ">
            <h2 class="heading-margin text-center">Add Physician</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" placeholder="Ivan, John...">
                    <span asp-validation-for="FirstName" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" placeholder="Ivanov, Johnson...">
                    <span asp-validation-for="LastName" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender"></label>
                    <select asp-for="Gender" class="form-control">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" placeholder="name@@gmail.c...">
                    <span asp-validation-for="Email" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com">
                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ExaminationPrice"></label>
                    <input asp-for="ExaminationPrice" class="form-control" placeholder="">
                    <span asp-validation-for="ExaminationPrice" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsWorkingWithChildren"></label>
                    <select asp-for="IsWorkingWithChildren" class="form-control">
                        <option value="True">Yes</option>
                        <option value="False">No</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="AddressId"></label>
                    <select asp-for="AddressId" class="form-control">
                        @foreach (var address in Model.Addresses)
                        {
                            <option value="@address.Id">@address.Number @address.Name, @address.City</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="SpecialityId"></label>
                    <select asp-for="SpecialityId" class="form-control">
                        @foreach (var speciality in Model.Specialities)
                        {
                            <option value="@speciality.Id">@speciality.Name</option>
                        }
                    </select>
                </div>
                <input class="btn btn-primary" type="submit" value="Save" />
            </form>
        </div>
    </div>
</div>