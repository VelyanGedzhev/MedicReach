@model List<MedicalCenterListingViewModel>

@{
    ViewData["Title"] = "Home Page";
}

@{
    var firstMedCenter = Model.Any() ? Model[0] : null;
    var secondMedCenter = Model.Count > 1 ? Model[1] : null;
    var thirdMedCenter = Model.Count > 2 ? Model[2] : null;
}

@if (!Model.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to MedicReach!</h1>
        <p class="lead">Currently, there are now Medical Centers registered.</p>
        <hr class="my-4">
        <p class="lead">
            <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
        </p>
    </div>
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @if (firstMedCenter != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@firstMedCenter.ImageUrl" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@firstMedCenter.Name</h5>
                </div>
            </div>
        }
        @if (secondMedCenter != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@secondMedCenter.ImageUrl" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@secondMedCenter.Name</h5>
                </div>
            </div>
        }
        @if (thirdMedCenter != null)
        {
            <div class="carousel-item active">
                <img class="d-block w-100" src="@thirdMedCenter.ImageUrl" alt="First slide">
                <div class="carousel-caption d-none d-md-block">
                    <h5>@thirdMedCenter.Name</h5>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>